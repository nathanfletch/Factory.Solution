@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Add an engineer who can fix this machine")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Apply changes" />
}

<p>@Html.ActionLink("See all machines", "Index")</p>
@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a engineer</h2>

<h4>Add a engineer who can fix this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Add" />
}

<p>@Html.ActionLink("See all machines", "Index")</p>
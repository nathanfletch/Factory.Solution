@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet</h3>
} 

<ul>
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }, new {@class="mt-3 btn btn-primary"})</li>
}
</ul>

<p>@Html.ActionLink("Add new machine", "Create", null, null, new {@class="mt-3 btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="mt-3 btn btn-primary"})</p>